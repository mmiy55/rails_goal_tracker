<%= simple_form_for(goal) do |f| %>
  <%= f.input :title, label: 'Goal title', placeholder:"Give your goal a title here", autofocus: true %>
  <%= f.input :category, :collection => Goal.categories %>
  <%= f.input :description , placeholder:"You can describe your goal here"  %>

  <%= f.input :photo, as: :file %>
  <%= f.submit "Go!", class: 'btn btn-primary mt-2 opacity-75' %>
<% end %>
