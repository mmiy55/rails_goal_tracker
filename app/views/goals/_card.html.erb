<div class="cards">

        <% if goals.size > 0 %>
          <% goals.each do |goal| %>

            <div class="card-custom h-100 text-center border border-5 border-warning" style="width: 18rem; border-radius: 2.0rem;">
            <%= image_tag "#{goal.photo.attached? ? cl_image_path(goal.photo.key) : "" }", class:"card-img-custom mb-2", alt:"..."%>
              <div class="card-body">
                <div class="card-bottom">
                  <div class="card-title mb-3 p-2 fs-4"><%= goal.title %></div>
                      <div class="card-edit-menu">
                        <%= link_to edit_goal_path(goal) do %>
                          <p class="card-text"><i class="fa-regular fa-pen-to-square"></i> Edit</p>
                        <% end %>
                          <%= link_to complete_goal_path(goal) do %>
                            <p class="card-text"><i class="fa-solid fa-circle-check"></i> Reached!</p>
                          <% end %>
                            <%= link_to goal_path(goal), data: { turbo_method: :delete, turbo_confirm: "Delete #{goal.title}?" } do %>
                              <p><i class="fa-regular fa-trash-can"></i> Delete</p>
                            <% end %>
                      </div>
                    <p>
                      <a class="btn btn-warning" data-bs-toggle="collapse" href="#collapseBody" role="button" aria-expanded="false" aria-controls="collapseBody">
                        About...
                      </a>
                    </p>
                      <div class="collapse" id="collapseBody">
                        <div class="p-2">
                          <p class="card-text"> <i class="fa-solid fa-quote-left"></i> <%= goal.category %> <i class="fa-solid fa-quote-right"></i></p>
                          <p class="card-text"><i class="fa-regular fa-comment-dots"></i> <%= goal.description.blank? ? "you can add a description through the pencil mark!" : goal.description %></p>
                        </div>
                      </div>
                    </div>
                </div>
                    </div>
          <% end %>
        <% else %>
          <h2>No goals here yet!</h2>
        <% end %>
</div>
