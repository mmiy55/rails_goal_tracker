<div class="back-img">
<div class="container p-5 mt-3" style ="background-color:rgba(255, 255, 255, 0.8);">
  <div class="fs-4 mb-3"> Ready to reach a new peak?
      <div class="btn btn-warning" >
        <%= link_to new_goal_path, style:"text-decoration:none;" do %>
      Add <i class="fa-solid fa-plus"></i>
    <% end %>
    </div>
  </div>
  <div class="goals_tracker-parent">
    <div class="goals-ongoing mb-3">
      <div class="title mb-3"> <i class="fa-solid fa-person-walking"></i> Ongoing: </div>
        <%= render 'goals/card', goals: @ongoing_goals %>
    </div>
    <div class="goals-completed mb-3">
          <div class="title mb-3"><i class="fa-solid fa-font-awesome"></i> Reached: </div>
            <%= render 'goals/card-completed', goals: @completed_goals %>
    </div>
    <div class="goals-progress">

  <%= render 'goals/table', goals: @goals, completed_goals: @completed_goals %>
  </div>
</div>
</div>
</div>
